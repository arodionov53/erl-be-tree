#!/usr/bin/env bash
## -*- sh-basic-offset: 2 -*-
set -x

if [ ! -d "be-tree" ]; then
    # git clone -b 'v1.0.5' --single-branch --depth 1 http://github.com/FrankBro/be-tree
    git clone -b 'DEGA-1294' --single-branch --depth 1 https://github.com/adgear/be-tree
    cd be-tree
    make NIF=true
fi

